<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadContentActivity"
    android:orientation="vertical"
    android:background="#2c3e50"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to upload?"
        android:fontFamily="@font/brushfont"
        android:textColor="#ecf0f1"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/addhostelbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bigbuttonshape"
        android:text="Hostel"
        android:textColor="#ecf0f1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/addpgbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bigbuttonshape"
        android:text="PG"
        android:textColor="#ecf0f1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/addrentaltoombutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bigbuttonshape"
        android:text="Rental room"
        android:textColor="#ecf0f1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/addtiffincenterbutton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bigbuttonshape"
        android:text="tiffin center"
        android:textColor="#ecf0f1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />




</LinearLayout>