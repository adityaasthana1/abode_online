<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    android:padding="2dp"
    android:background="@drawable/edittext">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:id="@+id/list_element_reviewerimage"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                android:elevation="3dp"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aditya Asthana"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="@font/lato"
                android:id="@+id/list_element_reviewername"
                android:layout_marginStart="5dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/list_element_reviewtimestamp"
                android:text="12:30 12/12/2020"/>

        </LinearLayout>

    </LinearLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/list_element_ratingbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The hostel is really good. Have spent 4 years of my engineering here. This place holds a lot of memories for me "
        android:textStyle="italic"
        android:textColor="#000"
        android:id="@+id/list_element_reviewdesc"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        />
</LinearLayout>