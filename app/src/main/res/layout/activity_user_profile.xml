<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/layout_animation"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <ImageView
                android:layout_marginStart="5dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/user"
                android:background="#666"
                android:scaleType="centerCrop"
                android:id="@+id/userImage"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aditya Asthana"
                android:layout_marginTop="20dp"
                android:textSize="24dp"
                android:fontFamily="@font/lato"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:id="@+id/userName"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ujjain, Madhya Pradesh"
                android:drawableStart="@drawable/ic_baseline_location_city_24"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:fontFamily="@font/lato"
                android:id="@+id/userCityState"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="127/5 Shastri Nagar Colony"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:id="@+id/userAddress"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456010"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:id="@+id/userPostalCode"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/moneyvector"
                android:gravity="center_vertical"
                />


        </LinearLayout>

    </LinearLayout>

    <android.widget.Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="change image"

        android:textSize="11dp"
        android:textColor="#ecf0f1"
        android:id="@+id/changeImageButton"/>
    />
    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resources Provided by User :"
        android:textColor="#000"
        android:fontFamily="@font/lato"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:divider="#fff"
        android:dividerHeight="6dp"
        android:id="@+id/userResource"
        />






</LinearLayout>
